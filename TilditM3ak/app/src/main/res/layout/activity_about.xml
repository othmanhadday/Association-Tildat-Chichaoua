<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:chainUseRtl="true"
    tools:context=".AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButtonToMainActivity"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="25dp"
            android:text="@string/aboutApp"
            android:textColor="#000"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/teldatmaakn"
            android:tint="#DD5C8C" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/logo"
            android:layout_weight="0"
            android:tint="#DD5C8C" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="تقديم"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="تلدات_معكن®  هو أول تطبيق تضامني على صعيد جهة مراكش آسفي موجه للنساء والفتيات ضحايا العنف. والغرض منه هو خلق منصة للاستماع والتوجيه والارشاد لهده الفئة عن بعد لتلبية الاحتياجات الرئيسية لمساعدة ودعم ضحايا العنف، إما في مواجهة حالة من أنواع العنف حاليا أو وقع في الماضي أو محتمل في المستقبل." />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10ssp"
                android:text="هو تطبيق في ملكية جمعية تلدات الكائن مقرها بمركز تأهيل وإدماج النساء في وضعية صعبة، شارع محمد السادس، مدينة شيشاوة ،جهة مراكش آسفي بالمملكة المغربية." />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text=" يتيح لك تلدات_معكن ® التنبيه والاتصال بسرعة مع جمعية تلدات للاستفادة من جميع أنواع المساعدات المتاحة، إما عبر الاتصال مباشرة عبر الهالتف أو ارسال رسالة نصية أو تسجيل شكاية مع إمكانية تسجيلها عبر الصوت بالنسبة للضحايا اللواتي لم يتقن الكتابة ." />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="يوفر تلدات_معكن ® وصولاً سهلاً إلى الموارد والمعلومات التي قد تكون مفيدة لك كضحية و / أو شاهد على العنف، ويجيب على الاسئلة التي تبحث عنها : أين تجد المساعدة؟ لمن أتحدث؟ ما العمل؟ كيفية فهم واكتشاف سلوك الضحية أو المعتدي؟ الاجراءات القانونية الواجب اتخادها؟ ابحث عن الدعم النفسي؟ ... حيث في حالات الطوارئ والتوتر والضيق ، من الصعب فهم ما يجري و / أو العثور على معلومات و جهات الاتصال الذين يمكنهم مساعدتك. " />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="لأجل دلك، أطلقت جمعية تلدات تطبيق تلدات_معكن ® حتى تجعل هذا البحث أسهل وأكثر سهولة في الوصول إليه. " />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="السياق العام"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="تطبيق بسيط وسريع، يلبي الاحتياجات الرئيسية للمساعدة والدعم في مواجهة حالة العنف الحالي أو الماضي. سواء كنت ضحية أو شاهدًا ، فإن هذا التطبيق مصمم لتوفير وقتك والعثور بسهولة أكبر على المعلومات حيث يثدم خدمات متنوعة لمستعمليه." />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text=" تستفيد تلدات_معكن ® من خبرة متخصصين في الأمن المعلومياتي والعنف ضد المرأة." />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="فريق العمل يضمن سرية جميع المعطيات الشخصية المدلى بها في التطبيق بناء على القوانين الجاري بها في العمل في المجال." />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="شروط الاستخدام العامة"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="تطبيق تلدات_معكن ®  في ملكية جمعية تلدات، يجب عليك قبول هذه الشروط والأحكام كشرط مسبق لاستخدام الخدمات. إذا قبلت هذه الشروط والأحكام وتود استخدام هدا التطبيق، فأنت تقر بأنك تبلغ من العمر 13 عامًا أو أكثر. إذا كان عمرك بين 13 و 17 عامًا ، أو ليس لديك السلطة اللازمة لإبرام عقود مثل هذه الشروط والأحكام ، فأنت تؤكد أن ممثلك القانوني أو صاحب المسؤولية الأبوية قد قرأ هذه الشروط والأحكام وقبلها." />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="أنت مسؤول عن اجراء كافة الترتيبات اللازمة لكي تقوم بالولوج الى التطبيق على الشبكة، كما أنك مسؤول أيضا عن ضمان أن كافة الاشخاص الذين يدخلون إلى التطبيق عن طريق الهاتف المحمول الخاصة بك على علم بشروط هذا الموقع، والتزامهم بها. وعند عرض أو تصفح أو استخدام أو الدخول الى التطبيق أو تقديم أي محتوى أو مواد الى التطبيق ، فإنك توافق على شروط الاستخدام الماثلة كاتفاق قانوني ملزم بينك وبين تطبيق تلدات_معكن ®  بدون قيد او شرط. ان مصطلح “أنت” سوف يشير الى أي شخص او كيان يقوم بعرض أو استخدام أو الدخول أو تصفح التطبيق أو تقديم أي محتوى أو مواد إلى التطبيق. في حالة عدم موافقتك على شروط الاستخدام الماثلة، فلا يجوز لك استخدام التطبيق. يحتفظ تطبيق تلدات_معكن ®   بحق تعديل شروط الاستخدام الماثلة في أي وقت وبدون اشعار مسبق، وأنك توافق على أن كل زيارة تقوم بها إلى التطبيق سوف تخضع إلى شروط الاستخدام السارية المفعول في ذلك الوقت، وأن استمرار إستخدام التطبيق الآن أو بعد التعديلات على شروط الاستخدام الماثلة يؤكد على أنك قمت بقراءة وقبول والموافقة على الالتزام بهذه التعديلات." />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="وصف الخدمات"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="يسمح للأشخاص المستعملين لتطبيق تلدات_معكن ®  من الاستفادة من خدمات متنوعة تندرج في سياق مناهضة النعنف بكافة أشكاله وأنواعه، حيث يقدم التطبيق العديد من الميزات:" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="1.	الاتصال أو أرسال رسائل نصية والطلب المسبق لأرقام الهواتف لخدمات الاستماع المتخصصة ومنصات المساعدة " />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="2.	ارسال ملف صوتي يتضمن شكاية الضخية في حالة عدم اتقان هده الأخيرة للكتابة" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="3.	تقديم خدمة الاستماع والتوجيه والارشاد للنساء والفتيات ضحايا العنف ." />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="4.	التتبع والمواكبة القانونية والنفسية والصحية لمستعملي التطبيق بناء على طلبهم أثناء دراسة ملفاتهم" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="5.	السرية التمة في معالجة طلبات مستخدمي التطبيق" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="هذه القائمة ليست شاملة ويمكن تعديلها في أي وقت من قبل فريق عمل التطبيق دون أن يتحمل أي شخص المسؤولية عن هذا الحساب." />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingRight="@dimen/m_10dp"
                android:text="الوصول إل التطبيق"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="للوصول إلى التطبيق واستخدامه ، يجب أن يكون لديك:" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="• خدمة الإنترنت" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text="• حساب عميل في المتاجر الافتراضية لـ Google و / أو Apple" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_20sdp"
                android:text=" هاتف محمول بنظام التشغيل Android®  و Apple iOS  " />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="قد يتم تحديث إصدار برنامج التطبيق من وقت لآخر لإضافة وظائف وخدمات جديدة. يمكن الوصول إلى التطبيق على مدار 24 ساعة في اليوم و 7 أيام في الأسبوع إلا في حالة القوة القاهرة أو حدوث حدث خارج عن السيطرة ويمكن أن يخضع لأي أعطال وتدخلات صيانة ضرورية للتشغيل السليم للتطبيق. كما يمكن تنفيذ تدخلات الصيانة دون تحذير المستخدمين مسبقًا." />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="التسجيل الصوتي"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="يتطلب استخدام وظيفة التسجيل الصوتي عبر ميكروفون الهاتف المحمول الحصول على موافقة مسبقة صريحة من المستخدم للتسجيل. لهذا ، يجب على المستخدم أن يكون على علم أن تسجيله لشكايته صوتيا يعتبر إذنا مسبقا باستخدام ميكروفون الهاتف في التطبيق، يمكن إلغاء تنشيط هذه الوظيفة أو تفعيلها في أي وقت مجانًا من طرف المستخدم. " />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="قد لا تعمل خدمة التسجيل الصوتي بدقة أو بشكل دائم أو بأخطاء حسب ظروف متغيرة مثل جودة الاتصال بالشبكة أو حالة أو مستوى بطارية هاتفك المحمول و / أو ظروف أخرى خارجة عن سيطرة التطبيق. ، بالإضافة إلى حالة هاتفك المحمول، وبدلك قد تتأثر دقة الصوت المسجل بفعل هده الاسباب المدكورة سلفا" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="الانهاء"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:text="يجوز للمستخدم إنهاء استخدام التطبيق في أي وقت. عند إنهاء التطبيق ، سيتم إنهاء الحقوق والتراخيص الممنوحة للمستخدم ويجب عليه التوقف عن استخدام التطبيق بالكامل." />
        </LinearLayout>
    </ScrollView>


</LinearLayout>